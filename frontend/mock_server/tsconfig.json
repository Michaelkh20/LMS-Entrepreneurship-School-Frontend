{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "esnext", // Компиляция кода в последнюю версию JavaScript
    "module": "ESNext", // Использование ES модулей
    "moduleResolution": "node", // Разрешение модулей в стиле Node.js
    "esModuleInterop": true, // Разрешить default импорт из модулей без ES модульной структуры
    "resolveJsonModule": true, // Разрешить импорт JSON файлов
    "outDir": "./dist", // Каталог для вывода скомпилированных файлов
    "rootDir": ".", // Каталог, содержащий исходные файлы
    "strict": true, // Включение всех строгих проверок типов
    "forceConsistentCasingInFileNames": true, // Большая чувствительность к регистру в именах файлов
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
